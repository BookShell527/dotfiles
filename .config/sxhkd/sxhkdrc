# Terminal (alacritty)
super + Return
	bspterm

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
super + d
	sh ~/.config/bspwm/rofi/bin/launcher

# Rofi Network Menu
super + n
	nmd

# Rofi Menus/Applets
super + {w,m,shift + x,s,shift + n,t}
	sh ~/.config/bspwm/rofi/bin/{windows,mpd,powermenu,screenshot,network,themes}

##---------- Applications ----------##

# Launch Apps
super + {e,o,shift + m}
    alacritty --config-file ~/.config/bspwm/alacritty/alacritty.yml -e {lfrun, gotop,ncmpcpp} 

super + {a,b,c,shift + e,shift + w}
    {chromium teams.microsoft.com,brave,color-gpick,thunar,nitrogen}

F1
    help-and-tips

# Lockscreen
ctrl + alt + l
    bsplock

##---------- System Keys ----------##

# Take a screenshot
Print
	takeshot --now
	
# Take screenshot of active window
ctrl + Print
	takeshot --win

# Take screenshot of area
ctrl + alt + Print
	takeshot --area

# Brighness control
XF86MonBrightness{Up,Down}
	brightness{ --inc, --dec}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	volume{ --inc, --dec}

XF86AudioMute
	volume --toggle
	
# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

##---------- Bspwm ----------##

# Close App
super + shift + c
	bspc node -c

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Quit/Restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}
	
# Fullscreen or Monocle
super + f
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + shift + space
    bspc node -t "~"{pseudo_tiled,tiled}

# Send the window to another edge of the screen
super + {_,shift + }{k,j}
	bspc node -{f,s} {next,prev}.local.window

# Send focused window to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

super + {h,l}
    bspc node -z {left -40 0 || bspc node -z right -40 0, right 40 0 || bspc node -z left 40 0}

## Move floating windows
super + {Left,Down,Up,Right}
	bspc node -v {-40 0,0 40,0 -40,40 0}

## Resize a floating windows
super + shift + Left
    bspc node -z left -20 0 || bspc node -z right -20 0

super + shift + Down
    bspc node -z top 0 20

super + shift + Up
    bspc node -z top 0 -20 || bspc node -z bottom 0 -20

super + shift + Right
    bspc right 20 0 || bspc node -z left 20 0
##---------- EOF ----------##
